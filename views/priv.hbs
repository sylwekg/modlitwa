{{#if hasErrors}}
    <div class="alert alert-danger content" id="errMsg">
        {{#each messages}}
            <p>{{this}}</p>
        {{/each}}
    </div>
{{/if}}

<form action="/admin/users/priv" method="POST"> 
	<div class="container-fluid content">
	    <div id='list' class="row featurette justify">
	        {{# each data}}
	       	<div class=" col-md-6 col-lg-3 col-xlg-3 item">
	       		<div class="row">
			        <div class="col-2 flex-center-vertically">
			        	<img class=" img-circle" src="/admin/images/{{foto}}" alt="user" width="50">
			    	</div>

			    	<div class="col-6 flex-center-vertically ">
			            <a href="/admin/users/profile/{{_id}}"><h5> <strong>  {{name}}</strong> </h5></a>
			            <h6 id="roleTag"><i class="fa fa-lock" aria-hidden="true"></i> {{role}}</h6>
			            <input type="hidden"  id="{{_id}}" >
			  	    </div>

		  	    	<div class="col-4 btn-group flex-center-vertically" data-toggle="buttons">
			  	    	<label class="btn btn-secondary .btn-sm">
						    <input type="radio"  name="{{_id}}" autocomplete="off" value="requester" >
						    Requester
					  	</label>
					  	<label class="btn btn-secondary .btn-sm">
						    <input type="radio"  name="{{_id}}" autocomplete="off" value="user" >
						    User
					  	</label>
					  	<label class="btn btn-secondary .btn-sm">
						    <input type="radio"  name="{{_id}}" autocomplete="off" value="manager" >
						    Manager
					  	</label>
					  	<label class="btn btn-secondary .btn-sm">
						    <input type="radio"  name="{{_id}}" autocomplete="off" value="admin" >
						    Admin
					  	</label>
					</div>

		  		</div>
		    </div>
	    	{{/each}}
	    </div>
	</div>

	<a href="javascript:;" onclick="parentNode.submit();">
		<div class="fixed-bottom accept-button justify">
			<h1><i class="fa fa-check-circle" aria-hidden="true"></i></h1>
		</div>
	</a>

</form>

<script type="text/javascript">
//err message
$( document ).ready(function() {
  $('#errMsg').delay(5000).slideUp();


});

</script>