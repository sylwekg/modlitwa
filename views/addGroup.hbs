
<div class="container-fluid"> 

	 <form action="/admin/groups/add" method="POST" enctype="multipart/form-data">   
	    <div class="row featurette justify">
			<div class="card profile content" style="max-width: 30rem; min-width: 18rem;" >
			    <img class="card-img-top img-circle" src="/admin/images/avatar.jpg" alt="user" width="150" id="frame">
			    <div class="card-block">

			    	<div class="card-img-top">
				  		<input class="btn btn-outline-success inputfile" type="file" accept="image/*" name="foto" id="camera" >
				  		{{!-- capture="camera" --}}
				  		<label class="btn btn-outline-success justify" for="camera">Change a foto (required format 600x600)</label>
				  	</div>

				  	<div class="form-group row">
					  	<label for="name" class="col-2 col-form-label"><strong>Name: </strong></label>
					  	<div class="col-10">
					    	<input class="form-control" type="name" id="name" name="groupName" required>
					  	</div>
				  	</div>

					<div class="form-group row">
						<label for="tajemnica" class="col-2 col-form-label"><strong>Manager: </strong></label>
					    <div class="col-10">
						  	<select class="form-control" id="manager" name="manager">

							  	{{# each usersData}}
									<option value={{_id}}>{{name}}</option>
							    {{/each}}

						   	</select>
						</div>
					</div> 

				    <div class="justify">
				        <button type="submit" class="btn btn-outline-success ">Save</button>
				        
				        <button type="button" onclick="goBack()" class="btn btn-outline-warning ">Cancel</button>
			        	
				    </div>

			    </div>
			</div>
		</div>
	</form>
</div>


<script type="text/javascript">
    $( document ).ready(function() {

	//obs≈Çuga wyboru zdjecia 
	  var camera = document.getElementById('camera');
	  var frame = document.getElementById('frame');

	  camera.addEventListener('change', function(e) {
	    var file = e.target.files[0]; 
	    // Do something with the image file.
	    frame.src = URL.createObjectURL(file);
	  });

  });


</script>